<Window x:ConnectionId='1'
    x:Class="AuthentiKitTrimCalibration.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AuthentiKitTrimCalibration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:AuthentiKitTrimCalibration.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Header-->
        <controls:HeaderControl Grid.ColumnSpan="2" />

        <!--Navigation-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView x:ConnectionId='11' Grid.Row="1"
                                                                                
                                                                                        
                      DisplayMemberPath="Name"
                      />


            <Button x:ConnectionId='12' Grid.Row="2" Content="New Mapping" Margin="10 10 10 30"                                                               VerticalAlignment="Bottom"                                          />

        </Grid>

        <!--Main Area-->
        <Grid x:ConnectionId='2' Grid.Row="1" Grid.Column="1"
                                                                                   >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:ConnectionId='3' Grid.Row="0" Header="Name" Margin="10"
                                                                                                                         />
            <ComboBox x:ConnectionId='4' Grid.Row="1" Header="Input"                                             Margin="10" HorizontalAlignment="Stretch"/>
            <ComboBox x:ConnectionId='5' Grid.Row="2" Header="Output"                                              Margin="10" HorizontalAlignment="Stretch"/>
            <TextBlock Grid.Row="3" Margin="10" Text="Calibration Settings" FontWeight="Bold"/>
            <StackPanel Grid.Row="4" Margin="10">
                <TextBox x:ConnectionId='8' Header="Button Multipler" Margin="10"
                                                                                                                                   />
                <TextBox x:ConnectionId='9' Header="'Start Holding' Threshold (ms)" Margin="10"
                                                                                                                                           />
                <TextBox x:ConnectionId='10' Header="'Stop Holding' Threshold (ms)" Margin="10"
                                                                                                                                          />
            </StackPanel>
            <Button x:ConnectionId='6' Grid.Row="5" Content="Apply Mapping" Margin="10 10 10 30" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                                                                            
                                                                               />
            
            <Button x:ConnectionId='7' Grid.Row="5" Grid.Column="1" Content="Remove Mapping" Margin="10 10 10 30" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                                                                        
                                                                />
        </Grid>

    </Grid>
</Window>

